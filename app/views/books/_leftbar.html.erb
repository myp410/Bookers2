<div>
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
    <table class="table">
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </table>
    <%= link_to edit_user_path(user.id) do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>  