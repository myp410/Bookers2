<h2>User Info</h2>


<h2>New book</h2>
<%= form_with url:books_path, model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit '投稿' %>
<% end %>  

<h2>Books</h2>
<% @books.each do |book| %>
  <div>
  <%= image_tag book.get_image %>
    <p><%= image_tag 'no_image.jpg' %></p>
    <p>Title <%= book.title %></p>
    <p>Opinion<%= book.body %></p>
  </div>
<% end %>

