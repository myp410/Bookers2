
<div class="container p-4 px-sm-0">
  <div class="row">
    <%= render 'books/leftbar', user: current_user, book: @book %>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

